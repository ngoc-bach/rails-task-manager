<h1>Task details</h1>

<h2> <%= @task.title %> </h2>
<p> <%= @task.details %> </p>
<p> <%= @task.completed %> </p>


<%= link_to "Edit this task", edit_task_path(@task) %>

<div></div>

<%= link_to "Delete",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure to delete?"}
%>
