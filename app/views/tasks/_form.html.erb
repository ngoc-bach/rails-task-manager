<%= form_with model: @task do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :details %>
  <%= f.text_field :details %>
  <%# <%= f.label :completed %>
  <%# <%= f.check_box :completed %>
  <% unless f.object.new_record? %>
    <label>
    <%= f.check_box :completed %> completed
    </label>
  <% end %>
  <%= f.submit %>
<% end %>
